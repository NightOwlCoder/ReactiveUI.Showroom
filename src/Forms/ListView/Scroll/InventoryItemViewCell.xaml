<?xml version="1.0" encoding="utf-8"?>

<reactiveui:ReactiveViewCell x:TypeArguments="scroll:InventoryItemViewModel" xmlns="http://xamarin.com/schemas/2014/forms"
                           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                           xmlns:reactiveui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                           xmlns:scroll="clr-namespace:Showroom.Scroll;assembly=Showroom"
                           x:Class="Showroom.Scroll.InventoryItemViewCell">
    <Grid Margin="16,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0"
               x:Name="Title" />
        <Label Grid.Column="1"
               x:Name="Description"
               HorizontalOptions="End" />
    </Grid>
</reactiveui:ReactiveViewCell>