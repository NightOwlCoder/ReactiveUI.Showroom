<?xml version="1.0" encoding="utf-8"?>

<showroom:ContentPageBase xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:scroll="clr-namespace:Showroom.Scroll;assembly=Showroom"
                          xmlns:showroom="clr-namespace:Showroom;assembly=Showroom"
                          x:Class="Showroom.Scroll.InfiniteLoad"
                          x:TypeArguments="scroll:InfiniteLoadViewModel">
    <ContentPage.Content>
        <ListView x:Name="LoadDataListView" RowHeight="72" IsPullToRefreshEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <scroll:LoadDataViewCell />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</showroom:ContentPageBase>