<?xml version="1.0" encoding="utf-8" ?>
<base:ContentPageBase xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:local="clr-namespace:Showroom"
                      xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
                      xmlns:base="clr-namespace:Showroom.Base;assembly=Showroom"
                      xmlns:main="clr-namespace:Showroom.Main;assembly=Showroom"
                      x:Class="Showroom.Main.MainPage"
                      x:TypeArguments="main:MainViewModel">

    <StackLayout>
        <!-- Place new controls here -->
        <forms:CachedImage Source="{Binding Image}" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" WidthRequest="300" HeightRequest="300" />
    </StackLayout>

</base:ContentPageBase>
